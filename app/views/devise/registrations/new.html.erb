<div class="col-md-4 col-md-offset-4 well signin">

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div>
        <br/>
        <%= f.email_field :email, autofocus: true, placeholder: "email", class:"form-control input-lg" %></div>

      <div>
        <% if @validatable %>
            <i>(<%= @minimum_password_length %> characters minimum)</i>
        <% end %>
        <br/>
        <%= f.password_field :password, autocomplete: "off", placeholder: "password", class:"form-control input-lg" %></div>

      <div>
        <br/>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirm", class:"form-control input-lg" %></div>

      <div><%= f.submit "Sign up", class: 'btn btn-primary btn-block btn-lg'%></div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
