<!DOCTYPE html>
<html>
<head>
  <title>Bloccit</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>
<body>

<ul class='nav nav-tabs navbar-inverse'>
  <li><%#= link_to "Bloccit", root_path %></li>
  <li><%#= link_to "About", about_path %></li>
  <li><%#= link_to "Topics", topics_path %></li>
  <li><%#= link_to "Popular", posts_path %></li>
  <li><%#= link_to "Users", users_path %></li>

  <div class="pull-right user-info">
    <% if current_user %>
        <%#= image_tag(current_user.avatar.tiny.url) if current_user.avatar? %>
        Hello <%= link_to (current_user.name || current_user.email), current_user %>!

        <% if current_user.subscribed %>
            <%= link_to "(Premium User)", new_user_session_path %>
        <% else %>
            <%= link_to "(Free User)", new_user_session_path %>
        <% end %>

        <%= link_to edit_user_registration_path, class: 'btn btn-primary btn-sm' do %>
            <span class="glyphicon glyphicon-user"></span>
        <% end %>

        <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm' do %>
            <span class="glyphicon glyphicon-log-out"></span>
        <% end %>
    <% else %>
        <%= link_to "Sign In", new_user_session_path %> or
        <%= link_to "Sign Up", new_user_registration_path %>
    <% end %>
  </div>

</ul>


<div class='container'>
  <div class="spacer"></div>
  <div class="row"> <!-- row 1 - black bar with glowing text -->
    <div class="col-sm-6 col-xs-12" >

      <div id="icon-bar" class="bordered dark-background" >

        <div class="row-inline pull-left">
          <%= link_to wikis_path, class: 'all' do %>

              <span id="all" class="nav-icons">=</span>
              <!--<span class="nav-icons all row-inline equals">=</span>-->
          <% end %>
        </div>

        <div class="row-inline pull-left">
          <%= link_to session[:last_page] do %>
              <span id="back" class="nav-icons row-inline">â€¹</span>
          <% end %>
        </div>

        <div class="row-inline pull-left">
          <span id="headline" class="glow-light-text"> <%= @headline_text %></span>
        </div>

      </div><!-- end #icon-bar-->

    </div>

    <div class="col-sm-6 col-xs-12">
      <div id="icon-bar" class="bordered dark-background">
        <% if @wiki %>
            <span id="headline-right" class="glow-green-text pull-right"><%= privatize_header_text %></span>
        <% else %>
            <span id="headline-right" class="glow-green-text pull-right"><%= @headline2_text %></span>
        <% end %>
      </div>
    </div>


  </div>

  <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
  <% elsif flash[:error] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:error] %>
      </div>
  <% elsif flash[:alert] %>
      <div class="alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
  <% end %>

  <%= yield %>

</div><!--end container-->

</body>

    <script>
        $(document).ready(function(){

            $('#all').hover(  function(){
                $('#all').addClass('glow-light-text');
                $('#all').css({'color':'white'});
            },  function(){
                $('#all').removeClass('glow-light-text');
                $('#all').css({'color':'#444'});
            } );

            $('#back').hover( function(){
                $('#back').addClass('glow-light-text');
                $('#back').css({'color':'white'});
            }, function(){
                $('#back').removeClass('glow-light-text');
                $('#back').css({'color':'#444'});
            } );

        });
    </script>


</html>
