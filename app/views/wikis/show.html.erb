<textarea id="hidden-text" ><%= @wiki.body %></textarea>

<div class="row">

      <%= link_to wikis_path do %>
          <i class="fa fa-navicon fa-3x nav-icons all row-inline"></i>
      <% end %>

      <%= link_to session[:last_page] do %>
          <i class="fa fa-angle-left fa-4x nav-icons back row-inline"></i>
      <% end %>

      <h1 class="headlines row-inline"><%= @wiki.name %></h1>

</div>

<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div id="preview" class="show"> </div>
  </div>
</div>

<% if policy(@wiki).edit? %>
    <%= link_to "Edit", edit_wiki_path, class: 'btn btn-warning' %>
<% end %>

<% if current_user.id == @wiki.user_id %>
    <%= link_to "Edit Collaborators", wiki_collaborations_path(@wiki.id) %>
<% end %>

<script>
    $(document).ready(function(){
        function Editor(input, preview) {
            this.update = function () {
                preview.innerHTML = markdown.toHTML(input.value);
            };
            input.editor = this;
            this.update();
        }

        var $ = function (id) { return document.getElementById(id); };
        new Editor($("hidden-text"), $("preview"));

    });
</script>