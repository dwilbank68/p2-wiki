<li class="dark-background">
  <hr/>
  <div class="row">
    <div class="col-xs-4 col-sm-5 wiki-name button-font"  ><%= link_to wiki_special.name, wiki_special, class:'glow-light-text dot-matrix-reg' %></div>
    <div class="col-xs-3 col-sm-4 wiki-owner dot-matrix-reg glow-light-text" ><%= wiki_special.user.name %></div>
    <div class="col-xs-1 col-sm-1 wiki-edit">
      <% if policy(wiki_special).edit? %>
          <%= link_to edit_wiki_path(wiki_special) do %>
              <i class="fa fa-pencil-square-o glow-light-text"></i>
          <% end %>
      <% else %>
          <i class="fa fa-pencil-square-o text-muted"></i>
      <% end %>
    </div>

    <div class="col-xs-3 col-sm-1 wiki-private" >
      <% if wiki_special.private? %>
          <p class="dot-matrix-reg glow-light-text">Private</p>
      <% else %>
          <p class="dot-matrix-reg glow-dim-text">Public</p>
      <% end %>
    </div>
  </div>
</li>
